<h3> Add a Car</h3>

<%= form_for @car do |f| %> 
<br>
<br>
    <label>Give your car a name:</label><br>
    <%= f.text_field :name %><br>
<br>

<br>
    <label>Make:</label><br>
    <%= f.text_field :make %><br>
<br>
    <label>Model:</label><br>
    <%= f.text_field :model %><br>
<br>
    <label>Year:</label><br>
<%=f.select(:year, 1915..2020)%>
<br>
<br>
    <label>Mileage:</label><br>
    <%= f.text_field :mileage %><br>

<br>
    <label>Description:</label><br>
    <%= f.text_area :description %><br>
<br>
    <%= f.submit %>

<br>
<% end %>
