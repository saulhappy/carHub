<div align="center">
<h1><%= @car.name %>'s Page</h1>
<h5><%= "#{@car.year} #{@car.make} #{@car.model}" %></h5>
</div>



  <% @photos.each do |photo| %>
    <div class="media-left">
      <!-- Renders image -->
      <%= link_to image_tag(photo.image.url, class: 'media-object'), photo.image.url %>
      <!-- Button to delete image -->
  <h4><%= @car.name%>'s Description</h4>
   <p><%= @car.description %></p>
   <br>
    <%= link_to "Add a maintenance record for #{@car.name}", :controller => :maint_records, :action => :new, id: @car.id %>
    <br><br>
   <%= link_to "Edit #{@car.name}", cars_edit_path(:id => @car.id) %>
    <br><br><br>
    <%= link_to 'Remove', photo_path(photo), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'}%>
    </div>
    <div class="media-body">
    </div>
  <% end %>

<% @maint_records.each do |photo| %>
  <div class="media-left">
    <!-- Renders image -->
    <%= link_to image_tag(photo.image.url, class: 'media-object'), photo.image.url%>
    <!-- Button to delete image -->
    <%= link_to 'Remove', maint_record_path(photo), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
  </div>
  <div class="media-body">

  </div>
<% end %>
