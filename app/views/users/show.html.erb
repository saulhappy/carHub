<div align="center">
<h1><%= @user.name %>'s Garage</h1>
</div>

<h4><b><%= link_to "Add a car", new_car_path%></b></h4>
<br><br><br>

<% @user.cars.each do |car|%>

  <%car.photos.each do |photo| %>
    <div class="media-left">
      <!-- Renders image -->
      <h5><%= car.name %></h5>
      <%= link_to image_tag(photo.image.url, class: 'media-object'), car_path(car.id), target: '_blank' %>
      <!-- Button to delete image -->
      <%= link_to 'Remove', photo_path(photo), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this photo?'} %>
    </div>
    <div class="media-body">

    </div>

  <% end %>
<% end %>


